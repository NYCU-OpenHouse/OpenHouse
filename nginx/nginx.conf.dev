upstream openhouse {
    server oh:8000;
}
upstream openhouse {
    server grafana:3000;
}
server {
    listen 80;

    server_name _;

    location /stub_status {
       stub_status on;
       access_log off;
    }

    location / {
        proxy_pass http://openhouse;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }
    location /static/ {
        alias /oh/static/;
    }
    location /media/ {
        alias /oh/media/;
    }
    location /grafana/ {         
        auth_request /auth;
        auth_request_set $user $upstream_http_x_web_user;  
        auth_request_set $auth_status $upstream_http_x_web_auth;
        proxy_set_header X-WEB-USER $user; 
        proxy_pass http://grafana;
    }

    location = /auth {
        proxy_pass http://openhouse/company/auth; 
    }
    error_page 404 @404error;
    error_page 403 =404 @404error;

    location @404error {
        rewrite ^(.*)$ /404.html break;
    }
}